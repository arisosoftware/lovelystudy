<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <classPathEntry location="/Users/h/.m2/repository/mysql/mysql-connector-java/5.1.46/mysql-connector-java-5.1.46.jar" />

  <context id="Tables" targetRuntime="MyBatis3">

    <!-- 注释 -->
    <commentGenerator>
      <!-- 是否生成注释代时间戳 -->
      <property name="suppressDate" value="true"/>
      <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
      <property name="suppressAllComments" value="true"/>
    </commentGenerator>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://localhost:3306/pybbs"
                    userId="root"
                    password="">
    </jdbcConnection>

    <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator targetPackage="co.yiiu.module.user.pojo" targetProject="src/main/java">
      <property name="enableSubPackages" value="false" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="co.yiiu.module.user.mapper"  targetProject="src/main/java">
      <property name="enableSubPackages" value="false" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="co.yiiu.module.user.mapper"  targetProject="src/main/java">
      <property name="enableSubPackages" value="false" />
    </javaClientGenerator>

    <table schema="pybbs" tableName="oauth2_user" domainObjectName=""
           enableCountByExample="false"
           enableDeleteByExample="false" enableSelectByExample="false"
           enableUpdateByExample="false">
      <generatedKey column="id" sqlStatement="MySql" identity="true"/>
    </table>

    <table schema="pybbs" tableName="remember_me_token" domainObjectName=""
           enableCountByExample="false"
           enableDeleteByExample="false" enableSelectByExample="false"
           enableUpdateByExample="false">
      <generatedKey column="id" sqlStatement="MySql" identity="true"/>
    </table>

    <table schema="pybbs" tableName="user" domainObjectName=""
           enableCountByExample="false"
           enableDeleteByExample="false" enableSelectByExample="false"
           enableUpdateByExample="false">
      <generatedKey column="id" sqlStatement="MySql" identity="true"/>
    </table>

  </context>
</generatorConfiguration>